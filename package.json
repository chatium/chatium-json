{
  "name": "@chatium/json",
  "version": "0.1.4",
  "description": "Chatium-JSON UI browser format specification and reference implementation for JS/TS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chatium/chatium-json.git"
  },
  "keywords": [
    "chatium"
  ],
  "author": "Chatium Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chatium/chatium-json/issues"
  },
  "homepage": "https://github.com/chatium/chatium-json#readme",
  "husky": {
    "hooks": {
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "npm run prepublishOnly && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --ext .ts --fix",
      "git add"
    ]
  },
  "scripts": {
    "build:watch": "tsc -w",
    "clean": "rimraf lib",
    "lint:all": "eslint --ext .ts .",
    "prepublishOnly": "tsc --sourceMap false"
  },
  "dependencies": {
    "tslib": "~2.0.1"
  },
  "devDependencies": {
    "@types/node": "~12.12.53",
    "@typescript-eslint/eslint-plugin": "~3.9.1",
    "@typescript-eslint/parser": "~3.9.1",
    "eslint": "~7.7.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-simple-import-sort": "~5.0.3",
    "husky": "~4.2.5",
    "lint-staged": "~10.2.11",
    "prettier": "~2.0.5",
    "rimraf": "~3.0.2",
    "typescript": "~3.9.7",
    "yarnhook": "~0.4.3"
  }
}
