{
  "name": "@chatium/json",
  "version": "0.1.11",
  "description": "Chatium-JSON UI browser format specification and reference implementation for JS/TS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chatium/chatium-json.git"
  },
  "keywords": [
    "chatium"
  ],
  "author": "Chatium Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chatium/chatium-json/issues"
  },
  "homepage": "https://github.com/chatium/chatium-json#readme",
  "husky": {
    "hooks": {
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "npm run prepublishOnly && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --ext .ts --fix",
      "git add"
    ]
  },
  "scripts": {
    "build:watch": "tsc -w",
    "clean": "rimraf lib",
    "lint:all": "eslint --ext .ts .",
    "prepublishOnly": "tsc --sourceMap false"
  },
  "dependencies": {
    "tslib": "~2.1.0"
  },
  "devDependencies": {
    "@types/node": "~14.14.31",
    "@typescript-eslint/eslint-plugin": "~4.15.2",
    "@typescript-eslint/parser": "~4.15.2",
    "eslint": "~7.20.0",
    "eslint-config-prettier": "~8.0.0",
    "eslint-plugin-simple-import-sort": "~7.0.0",
    "husky": "~5.1.1",
    "lint-staged": "~10.5.4",
    "prettier": "~2.2.1",
    "rimraf": "~3.0.2",
    "typescript": "~4.1.5",
    "yarnhook": "~0.5.1"
  }
}
